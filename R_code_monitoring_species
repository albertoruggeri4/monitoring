# Species monitoring

setwd("C:/Lab")

#check in the documentation
library(sdm)
library(raster) #predictors
library(rgdal) #species



##species
#with sdm there is a new folder "external/pecies.shp" where there is species data 
file <- system.file("external/species.shp", package="sdm")
species <- shapefile(file)

plot(species)
#extent --> lat/long --> we are in spain
species

#look at occurrence species -- values of specie: 1=species present 0=species not present
species$occurrence 

#let's make a condition with [ --> species occurence might be egual 1 (condition with ==) and the final comma to finish the condition
plot(species[species$Occurrence == 1,],col='blue',pch=16)
points(species[species$Occurrence == 0,],col='red',pch=16)

#environmental variables -- inside external also there are the predictors
path <- system.file("external", package="sdm")

#ASCII file temperature,vegetation, elevation,precipitation
lst <- list.files(path=path,pattern='asc$',full.names = T)
lst

#make a stack of these variables
preds <- stack(lst)

cl <- colorRampPalette(c('blue','orange','red','yellow')) (100)
plot(preds, col=cl)

#ex Brachipodiuorum rupestre -- correlation with different variables
plot(preds$elevation, col=cl)
points(species[species$Occurrence == 1,], pch=16)

plot(preds$temperature, col=cl)
points(species[species$Occurrence == 1,], pch=16)

plot(preds$precipitation, col=cl)
points(species[species$Occurrence == 1,], pch=16)

plot(preds$vegetation, col=cl)
points(species[species$Occurrence == 1,], pch=16)


#####put togethere all these data (preds - species)

d <- sdmData(train=species, predictors=preds)
d 
# nÂ° species only one (brachipodiuorum) -- type presence-absence (but it may be abbundance, with percentual)

#combination different variables (y=a+bx) (dataset --> d, species and predictors) (methods == type file?)
m1 <- sdm(Occurrence ~ elevation + precipitation + temperature + vegetation, data=d, methods = "glm")
p1 <- predict(m1, newdata=preds)

plot(p1, col=cl)
points(species[species$Occurrence == 1,], pch=16)

s1 <- stack(preds, p1)
plot(s1, col=cl)
